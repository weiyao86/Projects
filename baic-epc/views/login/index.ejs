<!DOCTYPE html>
<%
  viewBag.pageCode = 'login';
  viewBag.cssFiles = ['login'];
  viewBag.releaseCss = 'login.min';
%>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1">
  <title><%= pageTitle %></title>

  <% if (viewBag.isLocal) { %>
  <link type="text/css" rel="stylesheet" href="/styles/common.css" />
  <link type="text/css" rel="stylesheet" href="/styles/login.css" />
  <% } else { %>
  <link type="text/css" rel="stylesheet" href="/release/styles/login.min.css" />
  <% } %>

  <% include ../config/globalConfig.ejs %>
  <% include ../config/requirejsConfig.ejs %></head>
<body>

  <!--begin body-->
  <div class="box-login">

    <div class="wrap">
      <div class="wrap-row">
        <div id="container" class="container">
          <div class="header">北汽电子配件目录信息管理系统</div>
          <div class="msg-box">
            <div id="msg" class="msg">
              <div class="tips error">
                <span class="icon"></span>
                <span data-msg="msg">出现未知错误</span>
              </div>
            </div>
          </div>
          <div class="body clearfix">
            <div class="row row-login">
              <div class="cell label">帐号:</div>
              <div class="cell textbox">
                <input type="text" id="account" class="input-box" data-field="usercode"></div>
              <div class="cell textbox">
                <span class="star-symbol">*</span>
              </div>
            </div>
            <div class="row row-login">
              <div class="cell label">密码:</div>
              <div class="cell textbox">
                <input type="password" class="input-box" id="password" data-field="password"></div>
              <div class="cell textbox">
                <span class="star-symbol">*</span>
              </div>
            </div>
            <div class="row row-login">
              <div class="cell label">语言:</div>
              <div class="cell textbox">
                <!-- <input type="text" data-field="Language">
                -->
                <span class="form-select form-select-login">
                  <input type="hidden" class="form-select-input" data-field="lang" autocomplete="off" value="1">
                  <a class="form-select-switch-btn" href="javascript:;">
                    <span class="form-select-text" title="中文">中文</span>
                  </a>
                  <ul class="form-select-option-list" style="display: none;">
                    <li class="form-select-option" data-value="1" title="中文">中文</li>
                    <li class="form-select-option" data-value="2" title="EngLish">EngLish</li>
                  </ul>
                </span>

              </div>
            </div>
            <div class="row row-login">
              <div class="cell label">请选择:</div>
              <div class="cell textbox">
                <span class="form-select form-select-login">
                  <input type="hidden" class="form-select-input" data-field="database" autocomplete="off" value="">
                  <a class="form-select-switch-btn" href="javascript:;">
                    <span class="form-select-text" title="默认数据库">默认数据库</span>
                  </a>
                  <ul class="form-select-option-list" style="display: none;">
                    <li class="form-select-option" data-value="1" title="数据库1">数据库1</li>
                    <li class="form-select-option" data-value="2" title="数据库2">数据库2</li>
                  </ul>
                </span></div>
            </div>

            <div class="row row-login">
              <input type="button" id="btn_login" class="btn-login" value="登录"></div>

            <div class="row row-login text-wrap">
              <a href="#" class="forget-pwd cell">忘记密码?</a>
              <span class="text-desc">如有问题,请联系客服.</span>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <!--end body-->
  <% include ../common/footer.ejs %>